/**index.wxss**/
.swiper{
  width: 100%;
  height: 100%;
}
.storylist{
  display: flex;
  justify-content: space-around;
  flex-wrap:wrap;
  padding-top: 10rpx;
  }
  .storylist-item{
  margin:20rpx 0;
  display: flex;
  flex-direction: column;
  width:300rpx;
  height:300rpx;
  position: relative;
  }
  .storylist-image{
    width:300rpx;
    height:220rpx;
    border-radius: 20rpx;
  }
  .storylist-text{
    text-align: center;
    margin-top: 20rpx;
    color: #ff0000;
  font-size:35rpx;
  font-weight: 700;
  line-height: 1.2;
  padding:2px 0 0 6px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient:vertical;
  -webkit-line-clamp: 2;
  }
 
  