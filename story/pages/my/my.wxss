/* pages/my/my.wxss */
page {
  background-color: #f1f1f1;
}


.header {
  background-image: url(https://636c-cloud1-7gvgmtkv7b159954-1306910988.tcb.qcloud.la/simages/file/bj.jpeg);
  background-size: cover;
  height: 480rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.tx {
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border: 6rpx solid #fff;
  border-radius: 50%;
}

.name {
  font-size: 36rpx;
  margin-top: 20rpx;
  font-weight: 400;
}
.nav {
  overflow: hidden;
  margin-right: 30rpx;
  margin-left: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 50rpx;
  margin-top: 50rpx;
  box-sizing: border-box;
  display: block;
}

.nav-item {
  position: relative;
  display: flex;
  padding: 0 30rpx;
  min-height: 100rpx;
  background-color: #fff;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.nav-content {
  font-size: 30rpx;
  line-height: 1.6em;
  flex: 1;
}

.text {
  color: #808080;
}

.nav-content .iconfont {
  color: #d43c33;
  font-weight: 600;
  margin-right: 30rpx;
}

.nav-content .icon-arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 30rpx;
  bottom: 0;
  color: #808080;
  font-size: 28rpx;
}
.navigator-hover{
  color:red;
}
.bottom1{
  display:flex;
  height: 220px;
  align-items: flex-end;
  justify-content:center;
  padding-bottom: 10px;
}
.bottom{
  font-size: 28rpx;
  color:mediumblue ;
}